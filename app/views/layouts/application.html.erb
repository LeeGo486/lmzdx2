<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style="margin: 0">
    <header class="navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to "冒牌绿帽子大学", 'http://www.leego.tw', class: "navbar-brand", id: "logo" %>

      <div class="collapse navbar-collapse">
        <ul class="navbar-nav">
          <li class="nav-item active"><%= link_to "主页", '#', class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "介绍", '#', class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "注册", '#', class: "nav-link", new_user_path %></li>
        </ul>
      </div>
    </header>
    
    <div class="container">
    <%= yield %>
    </div>
  </body>
</html>
